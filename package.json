{
  "name": "@honestfoodcompany/pubsub",
  "version": "1.10.2",
  "description": "pubsub framework for managing topics and subscriptions",
  "main": "dist/index.js",
  "homepage": "https://deliveryhero.github.io/hfc-pubsub/",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "check-types": "tsc",
    "docs": "typedoc --out docs-site/ src/_docs.ts --tsconfig tsconfig.build.json --includes .",
    "lint": "eslint src examples __tests__ --ignore-path .gitignore --ext .js,.ts",
    "lint-fix": "npm run lint -- --fix",
    "list": "npm run subscriptions -- list",
    "start": "npm run subscriptions -- start",
    "subscriptions": "ts-node -r tsconfig-paths/register src/cli/subscriptions.ts",
    "test": "jest",
    "test-with-coverage": "npm run test -- --coverage",
    "watch": "npm run build -- -w",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "postinstall": "node postinstall.js"
  },
  "keywords": [
    "google pubsub",
    "pubsub",
    "publish/subscribe",
    "subscriptions",
    "pubsub framework",
    "event driven microservices",
    "microservices",
    "google pub/sub"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@google-cloud/pubsub": "^2.16.3",
    "@google-cloud/resource": "^1.2.1",
    "@types/bluebird": "^3.5.33",
    "bluebird": "^3.7.2",
    "chalk": "^2.4.2",
    "cli-ux": "^5.4.9",
    "dot-prop": ">=5.1.1",
    "dotenv": "^8.2.0",
    "find-config": "^1.0.0",
    "grpc": "^1.24.3",
    "gts": "^3.0.3",
    "wrap-ansi": "^6.2.0",
    "yargs": "^14.2.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@changesets/get-github-info": "^0.5.0",
    "@types/jest": "^26.0.19",
    "@types/node": ">=4.2.0 < 13",
    "@types/wrap-ansi": "^3.0.0",
    "@types/yargs": "^13.0.9",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.20.33",
    "typescript": "^4.1.3"
  },
  "author": "Delivery Hero HF Kitchens GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/deliveryhero/hfc-pubsub.git"
  },
  "bugs": {
    "url": "https://github.com/deliveryhero/hfc-pubsub/issues"
  },
  "license": "MIT",
  "bin": {
    "subscriptions": "./dist/cli/subscriptions.js"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "./node_modules/.bin/eslint --ignore-path .gitignore --ext .js,.ts --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
