{
  "name": "@honestfoodcompany/pubsub",
  "version": "1.7.0",
  "description": "pubsub framework for managing topics and subscriptions",
  "main": "dist/index.js",
  "scripts": {
    "watch": "nodemon --watch 'src/**/*' -e ts --exec yarn run build",
    "test": "jest --coverage",
    "build": "./node_modules/.bin/tsc",
    "prepare": "npm run build",
    "lint": "tslint -p tsconfig.json",
    "subscriptions": "ts-node src/cli/subscriptions.ts",
    "postinstall": "node postinstall.js"
  },
  "keywords": [
    "google pubsub",
    "pubsub",
    "publish/subscribe",
    "subscriptions",
    "pubsub framework"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@google-cloud/pubsub": "^2.3.0",
    "@types/wrap-ansi": "^3.0.0",
    "chalk": "^2.4.2",
    "cli-ux": "^5.4.9",
    "dotenv": "^8.2.0",
    "find-config": "^1.0.0",
    "fs": "0.0.1-security",
    "humanize-duration": "^3.23.1",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "mongoose": "^5.9.21",
    "nodemon": "^1.19.4",
    "typedoc": "^0.17.8",
    "wrap-ansi": "^6.2.0",
    "yargs": "^14.2.3"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.47",
    "@types/yargs": "^13.0.9",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "@typescript-eslint/typescript-estree": "2.17.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "8.1.7",
    "prettier": "^1.19.1",
    "replace-in-file": "^4.3.1",
    "ts-jest": "^24.3.0",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "typescript": "^3.9.6",
    "yarn": "^1.22.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "Delivery Hero HF Kitchens GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/honest-food-company/pubsub.git"
  },
  "license": "MIT",
  "bin": {
    "subscriptions": "./dist/cli/subscriptions.js"
  },
  "husky": {
    "hooks": {
      "post-commit": "(git-branch-is develop && HUSKY_SKIP_HOOKS=1 yarn version --patch)"
    }
  }
}
