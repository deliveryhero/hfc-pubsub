{
  "name": "@honestfoodcompany/pubsub",
  "version": "1.7.9",
  "description": "pubsub framework for managing topics and subscriptions",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "docs": "typedoc --out docs/ src/index.ts --tsconfig tsconfig.build.json",
    "lint": "eslint src examples __tests__ --ignore-path .gitignore --ext .js,.ts",
    "lint-fix": "npm run lint -- --fix",
    "subscriptions": "ts-node src/cli/subscriptions.ts",
    "test": "jest",
    "test-with-coverage": "npm run test -- --coverage",
    "watch": "npm run build -- -w",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "postinstall": "node postinstall.js"
  },
  "keywords": [
    "google pubsub",
    "pubsub",
    "publish/subscribe",
    "subscriptions",
    "pubsub framework",
    "event driven microservices",
    "microservices",
    "google pub/sub"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@google-cloud/pubsub": "^2.3.0",
    "@types/bluebird": "^3.5.33",
    "bluebird": "^3.7.2",
    "chalk": "^2.4.2",
    "cli-ux": "^5.4.9",
    "dot-prop": ">=5.1.1",
    "dotenv": "^8.2.0",
    "find-config": "^1.0.0",
    "fs": "0.0.1-security",
    "grpc": "^1.24.3",
    "gts": "^3.0.3",
    "wrap-ansi": "^6.2.0",
    "yargs": "^14.2.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": ">=4.2.0 < 13",
    "@types/wrap-ansi": "^3.0.0",
    "@types/yargs": "^13.0.9",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "lint-staged": "8.1.7",
    "nodemon": "^2.0.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "8.1.0",
    "typedoc": "^0.20.33",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "author": "Delivery Hero HF Kitchens GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/deliveryhero/hfc-pubsub.git"
  },
  "license": "MIT",
  "bin": {
    "subscriptions": "./dist/cli/subscriptions.js"
  },
  "husky": {
    "hooks": {
      "post-commit": "(git-branch-is develop && HUSKY_SKIP_HOOKS=1 yarn version --patch)"
    }
  }
}
