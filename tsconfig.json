{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./src"
  },
  "exclude": ["src/__tests__/**/*"],
  "include": ["src/**/*", "project"]
}