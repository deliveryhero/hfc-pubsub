{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "target": "es2019",
    "baseUrl": "./src",
    "paths": {
      "@honestfoodcompany/pubsub": ["./index.ts"],
      "@deliveryhero/pubsub": ["./index.ts"]
    }
  },
  "exclude": ["node_modules", "dist/**/*"],
  "include": [
    "src/**/*",
    "scripts/**/*",
    "__tests__/**/*",
    "examples/**/*",
    "jest.config.js",
    "docusaurus.config.js",
    "jest.setup.ts",
    ".eslintrc.js",
    "postinstall.js"
  ]
}
