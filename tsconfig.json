{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "target": "es2019",
    "baseUrl": "./src",
    "jsx": "react"
  },
  "exclude": ["node_modules", "src/__tests__/**/*"],
  "include": ["src/**/*"]
}
