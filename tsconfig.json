{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@honestfoodcompany/pubsub": ["./src/index.ts"],
      "@deliveryhero/pubsub": ["./src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist/**/*"],
  "include": [
    "src/**/*",
    "scripts/**/*",
    "src/__tests__/**/*",
    "__tests__/**/*",
    "examples/**/*",
    "jest.config.js",
    "docusaurus.config.js",
    "jest.setup.ts",
    ".eslintrc.js",
    "postinstall.js"
  ]
}
