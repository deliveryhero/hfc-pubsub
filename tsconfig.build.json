{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "es2019",
    "lib": ["es2019"]
  },
  "exclude": [
    "node_modules",
    "scripts/**/*",
    "src/__tests__/**/*",
    "__tests__/**/*",
    "jest.config.js",
    "jest.setup.ts",
    "examples/**/*"
  ],
  "include": ["src/**/*"],
  "typedocOptions": {
    "readme": "none",
    "excludePrivate": true
  }
}
