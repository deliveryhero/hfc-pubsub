{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "removeComments": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "scripts/**/*",
    "src/__tests__/**/*",
    "__tests__/**/*",
    "jest.config.js",
    "jest.setup.ts",
    "examples/**/*"
  ],
  "include": ["src/**/*"],
  "typedocOptions": {
    "readme": "none"
  }
}
